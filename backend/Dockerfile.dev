# Backend Development Dockerfile - Node.js API with security hardening
# Multi-stage build for development with hot reloading and debugging

# ====================
# Build Stage
# ====================
FROM node:22.22.0-trixie-slim AS builder

# Install build dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    && rm -rf /var/cache/apk/*

# Set working directory
WORKDIR /app

# Copy package files for dependency installation
COPY package*.json ./

# Install ALL dependencies (including dev dependencies for development)
RUN npm ci && npm cache clean --force

# Copy source code
COPY server.js ./

# ====================
# Development Runtime Stage
# ====================
FROM node:22.22.0-trixie-slim AS development

# Metadata
LABEL maintainer="student@example.com" \
      version="1.0" \
      description="Bookstore Backend API (Development)" \
      security.scan="trivy"

# Install runtime dependencies
RUN apk add --no-cache \
    dumb-init \
    && rm -rf /var/cache/apk/* \
    && addgroup -g 1001 -S nodejs \
    && adduser -S nodejs -u 1001

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Copy installed node_modules from builder stage (includes dev dependencies)
COPY --from=builder /app/node_modules ./node_modules

# Copy source code (will be overridden by volume mount in development)
COPY --from=builder /app/server.js ./

# Create directory for temporary files (for read-only root filesystem)
RUN mkdir -p /tmp && chown -R nodejs:nodejs /tmp /app

# Switch to non-root user
USER nodejs

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3000/api/health', (res) => { \
    process.exit(res.statusCode === 200 ? 0 : 1) \
  }).on('error', () => process.exit(1))"

# Default command for development (can be overridden)
CMD ["dumb-init", "--", "npx", "nodemon", "server.js"]