# Frontend Development Dockerfile
# Development version with volume mounts and additional tools

# Build stage - prepare static files
FROM alpine:3.19 AS builder

# Copy static files
COPY html/ /tmp/html/
COPY nginx.conf /tmp/nginx.conf
COPY security-headers.conf /tmp/security-headers.conf

# Runtime stage - Nginx Alpine with development tools
FROM nginx:1.29.4-alpine3.23-slim

# Labels for metadata
LABEL maintainer="Bookstore Team" \
      description="Frontend development container for Bookstore application" \
      version="1.0-dev"

# Install development tools and security updates
RUN apk update && apk upgrade && \
    apk add --no-cache \
        dumb-init \
        curl \
        wget \
        vim \
        && \
    rm -rf /var/cache/apk/*

# Copy custom nginx configuration
COPY --from=builder /tmp/nginx.conf /etc/nginx/nginx.conf
COPY --from=builder /tmp/security-headers.conf /etc/nginx/security-headers.conf

# Copy static files to nginx html directory (will be overridden by volume in dev)
COPY --from=builder /tmp/html/ /usr/share/nginx/html/

# Create necessary directories with proper permissions
RUN mkdir -p /var/cache/nginx /var/log/nginx /var/run && \
    chown -R nginx:nginx /var/cache/nginx /var/log/nginx /var/run /usr/share/nginx/html && \
    chmod -R 755 /usr/share/nginx/html

# Create development directories
RUN mkdir -p /app/html && \
    chown -R nginx:nginx /app

# Switch to non-root user
USER nginx

# Set working directory
WORKDIR /app

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/nginx-health || exit 1

# Expose port
EXPOSE 8080

# Use dumb-init for proper signal handling
ENTRYPOINT ["dumb-init", "--"]
CMD ["nginx", "-g", "daemon off;"]